<%=
  Oj.dump(
    @input_order.map do |k|
      seq_index = @equate_il ? k.gsub(/I/,'L') : k
      v = @result[seq_index]
      v.map do |p|
        res = { "sequence" => k,
                "taxon_id" => p.id,
                "taxon_name" => p.name,
                "taxon_parent_id" => p.parent_id,
                "taxon_rank" => p.rank,
        }
        if @extra_info
          res.merge!(lineage_info(p.lineage, @names))
        else
          res
        end
      end
    end.flatten).html_safe
%>
