<%=
  res = @result.map do |p|
    res = {
        "taxon_id" => p.id,
        "taxon_name" => p.name,
        "taxon_parent_id" => p.parent_id,
        "taxon_rank" => p.rank,
    }
    if @extra_info
      res.merge!(lineage_info(p.lineage, @names))
    else
      res
    end
  end
  Oj.dump(res).html_safe
%>
