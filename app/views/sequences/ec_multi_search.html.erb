Peptides matched: <%= @sequences.length %> </br>
EC numbers found: <%= @grouped_ecs.length %> </br>
Pathways found: <%= @pathways.length %> </br>

<div class="split">
<div class="split-left">
  <h3>EC numbers</h3>
  <ul>
  <% for @ec in @grouped_ecs do %>
    <li><a target="_blank" href="http://enzyme.expasy.org/EC/<%= @ec[0] %>"><%=  @ec[0] %></a> <%= @ec[1].nil? ? @ec[0] : @ec[1].name %>: <%= @ec[2] %></li>
  <% end %>
  </ul>
</div>
<div class="split-right">
  <h3>Pathways</h3>
  <ul>
    <% for @pathway in @pathways do %>
      <li><a target="_blank" href="http://www.genome.jp/kegg-bin/show_pathway?nocolor=1&scale=1.0&map=<%= @pathway[0].long_id %>&multi_query=<%= @pathway[1].map{|i| i.to_s + "+%23fffe00%0D%0A"}.join %>"><%= @pathway[0].long_id %></a> <%= @pathway[0].name %>: <%= @pathway[1].length %> hits</li>
    <% end %>
  </ul>
</div>
<div class="visualClear"></div>
</div>