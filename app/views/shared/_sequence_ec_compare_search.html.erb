<%= form_tag(:sequence_ec_compare_search, :method => "post") do %>
  <div class="form-group">
    <label for="ecqs1">Paste sample 1</label>
    <%= text_area_tag(:ecqs1, nil, :rows => 7, :spellcheck => "false", :class => "form-control") %>
  </div>
  <div class="form-group">
    <label for="ecqs2">Paste sample 2</label>
    <%= text_area_tag(:ecqs2, nil, :rows => 7, :spellcheck => "false", :class => "form-control") %>
  </div>
  <div id="search_button">
    <%= button_tag(raw("<span class='glyphicon glyphicon-search'></span> Compare"), :type => "submit", :class => "btn btn-primary") %>
    <%= button_tag(raw("<span class='glyphicon glyphicon-repeat'></span> Start Over"), { :name => 'reset', :id => 'reset_button', :type => "reset", :class => "btn btn-default" }) %>
  </div>
<% end %>
