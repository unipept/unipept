<%= form_tag(:sequence_multi_search, :method => "post", :class => "form-inline") do %>
    <div id="search_elements">
        <%= text_area_tag(:qs, nil, :rows => 7, :spellcheck => "false", :class => "form-control") %>
    </div>

    <div id="more_options"><i class="glyphicon glyphicon-plus"></i> <%= link_to("More options", "#") %></div>
    <div id="more_options_form">
        <h4>Advanced search options</h4>
        <div class="checkbox">
          <%= label_tag(:il, check_box_tag(:il, 1, true) + " Equate I and L") %>
        </div>
        <br>
        <div class="checkbox">
          <%= label_tag(:dupes, check_box_tag(:dupes, 1, true) + " Filter duplicate peptides") %>
        </div>
        <br>
        <div class="checkbox">
          <%= label_tag(:missed, check_box_tag(:missed, 1, false) + " Advanced missed cleavage handling") %>
        </div>
        <br>
        <div class="checkbox">
          <%= label_tag(:export, check_box_tag(:export, 1, false) + " Export to CSV") %>
        </div>
        <br>
        <p class="form-control-static">Name this search</p>
        <%= text_field_tag('search_name', nil, :placeholder => 'e.g. Sample B5', :class => "form-control")%>
    </div>
    <div id="search_button">
        <%= button_tag(raw("<i class='glyphicon glyphicon-search'></i> Search"), :type => "submit", :class => "btn btn-primary") %>
        <%= button_tag(raw("<i class='glyphicon glyphicon-repeat'></i> Start Over"), { :name => 'reset', :id => 'reset_button', :type => "reset", :class => "btn btn-default" }) %>
    </div>

<% end %>
